//Single Operation Part 2
code:
#include <iostream>
using namespace std;

int main(void) {
	int t;
	
	cin>>t;
	
	while(t--){
	    
	    int i,n,count=0;
	    
	    cin>>n;
	    string s;
	    cin>>s;
	    
	    for( i=0;i<n;i++){
	        
	        count++;
	        
	        if(s[i+1]=='1')
	            break;
	        
	      
	    }  
	   
	    
	cout<<count<<endl;
	}
	return 0;
}
